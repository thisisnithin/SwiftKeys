datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Results {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  wpm       Int
  accuracy  Decimal
  correct   Int
  wrong     Int
  time      Int      @default(30)
  userId    String?
  User      User?    @relation(fields: [userId], references: [id])
}

model User {
  id        String    @id
  email     String    @unique
  name      String?
  lastLogin DateTime?
  picture   String?
  results   Results[]
}
